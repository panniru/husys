= form_for [@course, @question], :html => { :class => "form-horizontal", :role => "form" } do |f|
  = render_errors(f.object)
  .col-sm-8
    .form-group
      = f.label "Question", :class => 'col-sm-4 control-label'
      .col-sm-8
        = f.text_area :description, :class => 'form-control', :autofocus => true
    .form-group
      = f.label "Option 1", :class => 'col-sm-4 control-label'
      .col-sm-8
        = f.text_field :option_1, :class => 'form-control'
    .form-group
      = f.label "Option 2", :class => 'col-sm-4 control-label'
      .col-sm-8
        = f.text_field :option_2, :class => 'form-control'
    .form-group
      = f.label "Option 3", :class => 'col-sm-4 control-label'
      .col-sm-8
        = f.text_field :option_3, :class => 'form-control'
    .form-group
      = f.label "Option 4", :class => 'col-sm-4 control-label'
      .col-sm-8
        = f.text_field :option_4, :class => 'form-control'
    .form-group
      = f.label "Answer", :class => 'col-sm-4 control-label'
      .col-sm-8
        = f.text_field :answer, :class => 'form-control'
      .form-group
    .col-sm-offset-6
      = f.submit "Create", :class => 'btn btn-primary'
