%table.table.table-striped
  %thead
    %th Category
    %th Sub Category
    %th Course
    %th Duration
    %th Total Questions
  %tbody
    %tr
      %td= data.category
      %td= data.sub_category
      %td= data.course_name
      %td= data.duration
      %td= data.no_of_questions

.col-md-5
  %table.table.table-bordered
    %thead
      %th Criteria
      %th Description
    %tbody
      %tr.success
        %td= data.pass_criteria_1
        %td= data.pass_text_1
      %tr.info
        %td= data.pass_criteria_2
        %td= data.pass_text_2
      %tr.warning
        %td= data.pass_criteria_3
        %td= data.pass_text_3
      %tr.danger
        %td= data.pass_criteria_4
        %td= data.pass_text_4
