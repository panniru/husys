.page-header
  %h2 Review
.col-sm-8.off
  %table
    %tbody
      - @questions.each_with_index do |question, index|
        - if index%10 == 0
          %tr
        %td
          - if question.answer_caught.present?
            %span.label.label-success
              = link_to question.active_question_no, exam_registration_path(:id => @registration, :question_id =>question.question_id)
          - else
            %span.label.label-danger
              = link_to question.active_question_no, exam_registration_path(:id => @registration, :question_id =>question.question_id)
.row
  .col-sm-3.pull-right
    = link_to "Submit", "#", :class => "btn btn-primary"
