.well
  = semantic_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-vertical" }) do |f|
    = f.semantic_errors
    = f.input :user_id, :autofocus => true
    = f.input :password
    = f.actions do
      = f.action :submit, :as => :button, :label => "Admin", :class => "btn btn-primary"
      = f.action :submit, :as => :button, :label => "Exam Center", :class => "btn btn-primary"
      = f.action :submit, :as => :button, :label => "Student", :class => "btn btn-primary"
