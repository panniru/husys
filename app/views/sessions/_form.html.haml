= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-vertical" }) do |f|
  = f.label :email
  = f.email_field :email, :autofocus => true

  = f.label :password
  = f.password_field :password
  - if devise_mapping.rememberable?
    = f.check_box :remember_me
    = f.label :remember_me
  %br
  = f.submit "Admin", :class => "btn btn-primary"
  = f.submit "Exam Center", :class => "btn btn-primary"
  = f.submit "Student", :class => "btn btn-primary"
